<UserControl
  x:Class="WPF_N_Tier_Test.Common.UI.Components.GlobalFeedbackBox"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:local="clr-namespace:WPF_N_Tier_Test.Common.UI.Components"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  Height="auto"
  MinWidth="200"
  MaxWidth="600"
  FontFamily="{DynamicResource MainFontFamily}"
  IsHitTestVisible="False"
  mc:Ignorable="d">
  <Grid>

    <Border
      x:Name="MainBorder"
      Background="DodgerBlue"
      CornerRadius="2">
      <Border.Effect>
        <DropShadowEffect
          BlurRadius="15"
          Direction="250"
          RenderingBias="Performance"
          ShadowDepth="0.5"
          Color="{DynamicResource ShadowC}" />
      </Border.Effect>


    </Border>
    <Grid Margin="5">
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="35" />
        <ColumnDefinition />
      </Grid.ColumnDefinitions>
      <Image
        Width="25"
        Margin="5"
        Source="/assets/tools/infocircle.png" />
      <TextBlock
        x:Name="MessageBox"
        Grid.Column="1"
        Margin="10"
        HorizontalAlignment="Center"
        VerticalAlignment="Center"
        FontWeight="Bold"
        Foreground="White"
        Text="FeedBack"
        TextWrapping="Wrap" />
    </Grid>
  </Grid>

</UserControl>
